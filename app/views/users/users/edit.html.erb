<div class='container'>
  <div class='row'>
    <div class="col-8" style="margin:200px;">
      <%= form_with model: @user do |f| %>
      <table class="table table-borderless">
        <h4>アカウント編集</h4>
        <tr>
          <th>アイコン</th>
          <td><%= f.file_field :profile_image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th>ユーザー名</th>
          <td><%= f.text_field :name %></td>
        </tr>
      </table>
    <%= f.submit '変更を保存', class: "btn", style: "color: white; mx-3" %>
    <% end %>
    </div>
  </div>
</div>
